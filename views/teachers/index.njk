{% extends 'layout.njk' %}

{% block content %}

<div class='card table-container'>
    <table>
        <thead>
            <tr>
                <th>Teacher</th>
                <th>Teaching Areas</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style='background-image: url({{teacher.avatar_url}})'></span>
                        {{teacher.full_name}}
                    </td>
                    <td>{{teacher.teaching_areas}}</td>
                    <td>
                        <a href="/teachers/{{teacher.id}}">Show</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>       
    </table>
</div>

{% endblock content %}