{% extends 'layout.njk' %}

{% block content %}

<div class="card">
    <section 
        class="avatar"
        style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
    </section>

    <section class="details">

        <h3>Details</h3>

        <div class="item">
            <div>Full Name</div>
            <div>{{ teacher.full_name }}</div>            
        </div>

        <div class="item">
            <div>Age</div>
            <div>{{ teacher.age }}</div>            
        </div>

        <div class="item">
            <div>Degree</div>
            <div>{{ teacher.degree }}</div>            
        </div>

        <div class="item">
            <div>Class type</div>
            <div>{{ 'Classroom' if teacher.learning_type == 'C' else 'Distance' }}</div>            
        </div>

        <div class="item">
            <div>Teaching Areas</div>
            <div>
                {% for area in teacher.teaching_areas %}
                <span>{{ area }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Since</div>
            <div>{{ teacher.created_at }}</div>            
        </div>

        <a href="/teachers/{{ teacher.id }}/edit" class='button'>Edit</a>
    
    </section>
</div>

{% endblock content %}